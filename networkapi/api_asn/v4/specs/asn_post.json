{
  "title": "AS Post",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "required": [
    "asns"
  ],
  "properties": {
    "networks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "asn_ip_equipment": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "asn": {
                  "type": "integer"
                },
                "ipv4_equipment": {
                  "type": "integer"
                },
                "ipv6_equipment": {
                  "type": "integer"
                }
              },
              "required": [
                "asn"
              ]
            }
          }
        },
        "required": [
          "name",
          "description"
        ]
      }
    }
  }
}
